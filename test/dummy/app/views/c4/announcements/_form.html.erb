<%# Form fields %>
<%= form_for(@announcement,  :url => (@announcement.new_record? ? main_app.announcements_path : main_app.announcement_path(@announcement.id)), :html => { :multipart => true }) do |f| %>
  <% if @announcement.errors.any? %>
    <div class="error-explanation-header">
      <%= pluralize(@announcement.errors.count, "error impidiÃ³", "errores impidieron") %> que se guardaran los cambios.
    </div>
<% end %>




<%# Name %>
<div class="row">
  
    <%= full_field(f,:name, 'Name' ,'Name...') %>
  
</div>



<%# Description %>
<div class="row">
  
    <%= full_text_area(f,:description, 'Description' ,'Description...') %>
  
</div>



<%# Great %>
<div class="row">
  
    <%= f.label :great, class:'field-options-wrapper' do %>
        <%= f.check_box :great %>Great
    <% end %>
  
</div>



<%# Inside %>
<div class="row">
  
    <%= f.label :inside, class:'field-options-wrapper' do %>
        <%= f.check_box :inside %>Inside
    <% end %>
  
</div>



<%# New %>
<div class="row">
  
    <%= f.label :new, class:'field-options-wrapper' do %>
        <%= f.check_box :new %>New
    <% end %>
  
</div>



<%# Opinion %>
<div class="row">
  
    <%= full_field(f,:opinion, 'Opinion' ,'Opinion...') %>
  
</div>

<hr>
<div class="row">
  <div class="six columns">
    <%= link_to "Salir sin guardar", main_app.announcements_path, class: 'c4-button-secondary u-full-width'  %>
  </div>

  <div class="six columns">
    <%= f.submit "Guardar", class: 'c4-button-primary u-full-width' %>
  </div>
</div>

<% end %>
